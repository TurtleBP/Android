<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:name=".MyApplication"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MilkteaApp"
        tools:targetApi="31">

        <!-- LAUNCHER -->
        <activity
            android:name=".activity.EntryActivity"
            android:exported="true"
            android:theme="@style/Theme.MilkteaApp.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main/User -->
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"
            android:launchMode="singleTask"/>

        <!-- Admin -->
        <activity
            android:name=".activity.admin.AdminMainActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"
            android:launchMode="singleTask"/>

        <!-- Auth -->
        <activity android:name=".activity.LoginActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity android:name=".activity.RegisterActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity android:name=".activity.ForgotPasswordActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>

        <!-- (Tùy chọn) Giữ lại nếu vẫn muốn có flow bằng Activity:
        <activity
            android:name=".activity.ProductDetailActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false" />
        -->

        <!-- Admin feature screens (nếu còn dùng) -->
        <activity android:name=".activity.admin.AddProductActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity android:name=".activity.admin.EditProductActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>

        <!-- Cart & Checkout -->
        <activity android:name=".activity.CheckoutActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity android:name=".activity.OrderHistoryActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>

        <!-- Profile & Settings -->
        <activity android:name=".activity.EditProfileActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity android:name=".activity.ChangePasswordActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity android:name=".activity.SettingsActivity"
            android:theme="@style/Theme.MilkteaApp.NoActionBar"
            android:exported="false"/>
        <activity
            android:name=".activity.AddressListActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />
        <activity
            android:name=".activity.AddEditAddressActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />

        <!-- Services -->
        <service
            android:name=".service.NotificationService"
            android:enabled="true"
            android:exported="false" />
    </application>
</manifest>
