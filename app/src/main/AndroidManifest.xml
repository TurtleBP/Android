<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet & mạng -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Android 13+ cần quyền runtime để hiển thị notification -->
    <uses-permission
        android:name="android.permission.POST_NOTIFICATIONS"
        tools:targetApi="33" />

    <!-- Nếu NotificationService chạy foreground (hiện noti liên tục) -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!-- (TÙY CHỌN) Nếu bạn cần tải ảnh qua HTTP (không khuyến nghị):
         Bỏ comment 2 dòng dưới và tạo res/xml/network_security_config.xml cho domain được phép.
    -->
    <!--
    <uses-permission android:name="android.permission.INTERNET" />
    -->

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MilkteaApp"
        tools:targetApi="31">

        <!-- (TÙY CHỌN) Nếu dùng HTTP cleartext, bỏ comment 2 dòng này và tạo file xml:
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        -->

        <!-- LAUNCHER -->
        <activity
            android:name=".activity.EntryActivity"
            android:exported="true"
            android:theme="@style/Theme.MilkteaApp.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main/User -->
        <activity
            android:name=".activity.MainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />

        <!-- Admin -->
        <activity
            android:name=".activity.admin.AdminMainActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />

        <!-- Auth -->
        <activity
            android:name=".activity.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.admin.AdminOrderDetailActivity"
            android:exported="false" />

        <!-- Admin product editor -->
        <activity
            android:name=".activity.admin.ProductEditorActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />

        <!-- Cart & Checkout -->
        <activity
            android:name=".activity.CheckoutActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.OrderHistoryActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.OrderDetailActivity"
            android:exported="false"
            android:parentActivityName=".activity.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainActivity" />
        </activity>

        <!-- Profile & Settings -->
        <activity
            android:name=".activity.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.ChangePasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.SettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.MilkteaApp.NoActionBar" />
        <activity
            android:name=".activity.AddressActivity"
            android:exported="false"
            android:theme="@style/Theme.Material3.DayNight.NoActionBar" />

        <!-- Notification Service (nếu foreground, hãy startForeground() trong service) -->
        <service
            android:name=".service.NotificationService"
            android:enabled="true"
            android:exported="false" />
    </application>
</manifest>
