<resources>
    <!-- XÓA HOẶC COMMENT TOÀN BỘ AppTheme VÌ ĐANG BỊ TRÙNG/ XUNG ĐỘT -->
    <!--
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>
    -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.popUpOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!-- Bo tròn 100% cho ShapeableImageView -->
    <style name="ShapeAppearanceOverlay.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <declare-styleable name="AspectRatioView">
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement" format="enum">
            <enum name="Width" value="0" />
            <enum name="Height" value="1" />
        </attr>
        <attr name="aspectRatio" format="float" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <!-- Custom Ratingbar -->
    <style name="ratingbar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/bg_ratingbar</item>
        <item name="android:minHeight">@dimen/define_dimen_22</item>
        <item name="android:maxHeight">@dimen/define_dimen_22</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetStyle</item>
    </style>

    <style name="AppBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/AppBottomSheetShape</item>
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="AppBottomSheetShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <declare-styleable name="DividerView">
        <attr name="color" format="color" />
        <attr name="dashLength" format="dimension" />
        <attr name="dashGap" format="dimension" />
        <attr name="dashThickness" format="dimension" />
        <attr name="orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
    </declare-styleable>
</resources>