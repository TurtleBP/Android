<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:layout_marginEnd="10dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Tên sản phẩm -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trà sữa Ô long"
            android:textStyle="bold" />

        <!-- Hàng 1: Size • Đường • Đá -->
        <TextView
            android:id="@+id/tvLine1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size L • Đường 50% • Đá 30%"
            android:textSize="12sp"
            android:alpha="0.9" />

        <!-- Hàng 2: Topping (tự xuống dòng nếu dài) -->
        <TextView
            android:id="@+id/tvToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topping: Trân châu trắng, Flan, Thạch cà phê"
            android:textSize="12sp"
            android:alpha="0.8"
            android:visibility="gone" />

        <!-- Ghi chú (ẩn nếu không có) -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi chú: Ít đá"
            android:textSize="12sp"
            android:textStyle="italic"
            android:textColor="@color/primary"
            android:visibility="gone"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="end">

        <TextView
            android:id="@+id/tvUnitQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45.000đ × 2"
            android:textSize="12sp"
            android:alpha="0.9" />

        <TextView
            android:id="@+id/tvLineTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90.000đ"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
