<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    android:background="@color/white">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nội dung chính -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <!-- ===== HÀNG 1: ẢNH + (Tên, Size•Đường•Đá + Ghi chú) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cartItemImage"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_milk_tea"
                    android:background="@color/light_gray"
                    android:gravity="top" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- Tên -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/cartItemName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="17sp" />

                    <!-- Size • Đường • Đá -->
                    <TextView
                        android:id="@+id/cartItemSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/gray_600"
                        android:layout_marginTop="3dp"
                        android:alpha="0.9" />

                    <!-- Ghi chú (ngay dưới Size) -->
                    <TextView
                        android:id="@+id/cartItemNote"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textStyle="italic"
                        android:textColor="@color/gray_600"
                        android:alpha="0.85"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:maxLines="2"
                        android:ellipsize="end" />
                </LinearLayout>
            </LinearLayout>

            <!-- khoảng cách nhỏ giữa 2 hàng -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp" />

            <!-- ===== HÀNG 2: (Topping)  ||  (Giá + Qty controls) ===== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Trái: Topping -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cartItemTopping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/gray_600"
                        android:alpha="0.85"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- Phải: Giá + số lượng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp"
                    android:gravity="end">

                    <!-- Hàng phải 1: Giá -->
                    <TextView
                        android:id="@+id/cartItemTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/primary" />

                    <!-- Hàng phải 2: giảm / số lượng / tăng -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/decrementButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_remove"
                            app:tint="@color/gray_500"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            />

                        <TextView
                            android:id="@+id/cartItemQuantity"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginHorizontal="6dp" />

                        <ImageView
                            android:id="@+id/incrementButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_add"
                            app:tint="@color/gray_500"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Nút Xóa cố định góc phải trên -->
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="end|top"
            android:layout_margin="8dp"
            android:src="@drawable/ic_delete_forever"
            app:tint="@color/red_500"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/delete" />
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
