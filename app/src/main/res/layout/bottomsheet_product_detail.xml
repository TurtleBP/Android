<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- NỘI DUNG CUỘN -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Handle -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_bottomsheet_handle" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:paddingBottom="104dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ===== ẢNH + TÊN + GIÁ ===== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/milkTeaImage"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_milk_tea" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                android:id="@+id/nameTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/priceTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:layout_marginTop="6dp"
                                android:textColor="@color/primary" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mô tả -->
                <TextView
                    android:id="@+id/descriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/gray_700"
                    android:layout_marginTop="8dp" />

                <!-- ===== TUỲ CHỌN ===== -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="12dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Kích thước -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kích thước"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="6dp"/>

                        <RadioGroup
                            android:id="@+id/sizeRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="3">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioSmall"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Nhỏ"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioMedium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Vừa"
                                android:textSize="15sp"
                                android:checked="true"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioLarge"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Lớn"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />
                        </RadioGroup>

                        <!-- Mức đường -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mức đường"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="6dp" />

                        <RadioGroup
                            android:id="@+id/sugarRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioSugar0"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0%"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioSugar50"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="50%"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioSugar100"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="100%"
                                android:textSize="15sp"
                                android:checked="true"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioSugar120"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="120%"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />
                        </RadioGroup>

                        <!-- Mức đá -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mức đá"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="6dp" />

                        <RadioGroup
                            android:id="@+id/iceRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="4.3">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioIceSeparate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.3"
                                android:text="Đá riêng"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioIce0"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0%"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioIce50"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="50%"
                                android:textSize="15sp"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/radioIce100"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="100%"
                                android:textSize="15sp"
                                android:checked="true"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:minWidth="0dp"
                                android:paddingHorizontal="0dp" />
                        </RadioGroup>

                        <!-- Topping -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Topping"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerToppings"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                        <TextView
                            android:id="@+id/toppingsEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Không có topping phù hợp"
                            android:textSize="14sp"
                            android:textColor="@color/gray_700"
                            android:visibility="gone"
                            android:paddingTop="4dp"/>

                        <!-- 🔸 Ghi chú cho sản phẩm -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú cho sản phẩm"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="6dp"/>

                        <EditText
                            android:id="@+id/edtNote"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Ví dụ: ít đá, không topping, lắc kỹ..."
                            android:textSize="15sp"
                            android:maxLines="3"
                            android:minHeight="60dp"
                            android:gravity="top|start"
                            android:background="@drawable/bg_edittext"
                            android:padding="10dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Số lượng -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/decrementButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:backgroundTint="@color/white"
                        app:icon="@drawable/ic_remove"
                        app:iconTint="@color/black"
                        app:iconGravity="textStart" />

                    <TextView
                        android:id="@+id/quantityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="14dp"
                        android:textColor="@color/black"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/incrementButton"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:backgroundTint="@color/white"
                        app:icon="@drawable/ic_add"
                        app:iconTint="@color/black"
                        app:iconGravity="textStart" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="28dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

    <!-- THANH CỐ ĐỊNH DƯỚI -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        android:layout_gravity="bottom"
        android:padding="12dp"
        android:background="@color/white"
        android:elevation="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tổng cộng"
                android:textSize="15sp"
                android:textColor="@color/gray_600"/>

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0đ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/addToCartButton"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/add_to_cart"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_shopping_cart"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            app:backgroundTint="@color/primary"/>
    </LinearLayout>
</FrameLayout>
