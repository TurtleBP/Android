<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="10dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/primary">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: Code + Active switch -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TRASUA15K"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/primary" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/swActive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kích hoạt"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Hàng 1: Ưu đãi (trái) + Áp dụng với hóa đơn (phải) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Cột trái: Ưu đãi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBenefitLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ưu đãi:"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvBenefit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Giảm 15.000đ (tối đa 30.000đ)"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- Cột phải: Áp dụng với hóa đơn -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMinLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Áp dụng với hóa đơn:"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Từ 60.000đ"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>



        <!-- Hàng 2: Số lượng (trái) + Hạn sử dụng (phải) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <!-- Cột trái: Số lượng -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLimitLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng:"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvLimit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mỗi khách hàng 1 lần"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="wrap_content" />

            <!-- Cột phải: Hạn sử dụng -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvExpiryLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hạn sử dụng:"
                    android:textStyle="bold"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tvExpiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đến 15/11/2025"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- Hình thức thanh toán -->
        <TextView
            android:id="@+id/tvChannelsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hình thức thanh toán:"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginTop="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsChannels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:singleSelection="false"
            app:singleLine="false"
            app:chipSpacingHorizontal="6dp"
            app:chipSpacingVertical="6dp" />
        <!-- Actions -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Sửa"
                android:textSize="13sp"
                android:paddingHorizontal="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Xóa"
                android:textSize="13sp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="10dp" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
