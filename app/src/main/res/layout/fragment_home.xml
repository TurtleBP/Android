<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.HomeFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 🔹 Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            app:title="Fresh Milk Tea Everyday!"
            app:titleTextColor="@color/white"
            app:titleCentered="false"/>

        <!-- 🔹 Nội dung chính -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 🔸 Banner -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/vpBanner"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginBottom="16dp"/>

                <!-- 🔸 Giới thiệu -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/light_gray"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvIntroTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giới thiệu"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tvIntroBody"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/Intro"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="@color/gray_700"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- 🔸 Danh mục gợi ý -->
                <TextView
                    android:id="@+id/tvCatalog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Danh mục gợi ý"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/black"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="4">

                    <!-- Trà Sữa -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/milktea"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                            app:strokeColor="@color/light_gray"
                            app:strokeWidth="1dp"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Trà Sữa"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Trà Trái Cây -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/tea_blacktea"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                            app:strokeColor="@color/light_gray"
                            app:strokeWidth="1dp"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Trà Trái Cây"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Kem Cheese -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/milktea_cheese"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                            app:strokeColor="@color/light_gray"
                            app:strokeWidth="1dp"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Kem Cheese"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <!-- Cà Phê -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/tea_blacktea"
                            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                            app:strokeColor="@color/light_gray"
                            app:strokeWidth="1dp"
                            android:scaleType="centerCrop"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Cà Phê"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- 🔸 Sản phẩm nổi bật -->
                <TextView
                    android:id="@+id/tvTopPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Sản phẩm nổi bật"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

                <!-- 🔸 Review khách hàng -->
                <TextView
                    android:id="@+id/tvReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Đánh giá khách hàng"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="@color/black"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"
                    android:scrollbars="none"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- 🔹 Nút sản phẩm (đã có) -->
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fabProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Sản phẩm"
            app:icon="@drawable/ic_milktea_cup"
            app:iconPadding="8dp"
            app:backgroundTint="@color/primary"
            app:tint="@color/white"
            app:layout_anchor="@id/scrollHome"
            app:layout_anchorGravity="bottom|end" />

        <!-- 🔹 Lottie overlay chồng lên FAB -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lavCart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="16dp"
            android:visibility="gone"
            android:clickable="false"
            android:focusable="false"
            app:layout_anchor="@id/scrollHome"
            app:layout_anchorGravity="bottom|end"

            app:lottie_rawRes="@raw/milktea_splash"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_speed="1.2"
            app:lottie_renderMode="hardware" />




    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
