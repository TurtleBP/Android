<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Mã voucher -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mã voucher (VD: TRASUA15K)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Chọn loại voucher -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTypeOrderFixed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:lines="4"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:text="Giảm TT tiền"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTypeOrderPercent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:lines="4"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:text="Giảm % đơn"
                app:cornerRadius="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnTypeShipFixed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:lines="4"
                android:ellipsize="end"
                android:gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:text="Giảm phí ship"
                app:cornerRadius="12dp"/>
        </LinearLayout>

        <!-- Số tiền giảm (ORDER_FIXED / SHIPPING_FIXED) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Số tiền giảm (VND) – cho Giảm tiền tổng đơn / Giảm phí ship">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- % giảm (ORDER_PERCENT) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="% giảm – cho Giảm % tổng đơn"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Trần giảm (ORDER_PERCENT) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilMaxDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giảm tối đa (VND) – tuỳ chọn cho Giảm %"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMaxDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Đơn tối thiểu -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đơn tối thiểu (VND)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtMin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ngày kết thúc -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày kết thúc (yyyy-MM-dd)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtEndDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Giới hạn lượt/khách -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Giới hạn lượt/khách">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLimit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kênh áp dụng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="12dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chkCOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COD"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chkMomo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Momo"/>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/chkCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Thẻ"/>
        </LinearLayout>

        <!-- Kích hoạt -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Kích hoạt"
            app:useMaterialThemeColors="true"/>

        <!-- Mô tả -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mô tả">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"/>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
