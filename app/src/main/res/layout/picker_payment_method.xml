<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="16dp">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="Chọn phương thức thanh toán" android:textStyle="bold" android:textSize="16sp"
        android:paddingBottom="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCOD" android:layout_width="match_parent" android:layout_height="48dp"
        android:text="COD (Thanh toán khi nhận)" android:textAllCaps="false"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVNPAY" android:layout_width="match_parent" android:layout_height="48dp"
        android:text="VNPAY" android:textAllCaps="false" android:layout_marginTop="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMomo" android:layout_width="match_parent" android:layout_height="48dp"
        android:text="Momo" android:textAllCaps="false" android:layout_marginTop="8dp"/>
</LinearLayout>
